<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <layer-list>
            <item android:right="@dimen/_5sdp" android:top="@dimen/_5sdp">
                <shape>
                    <corners android:radius="@dimen/_7sdp" />

                    <gradient android:angle="90" android:endColor="#f0f1f2" android:startColor="#f0f1f2" />
                    <!-- <solid android:color="#44c62b" />-->
                </shape>
            </item>

        </layer-list>
    </item>
    <item>
        <layer-list>

            <!-- Shadow color -->
            <item>
                <shape>
                    <corners android:radius="@dimen/_10sdp" />
                    <solid android:color="#f0f1f2" />

                </shape>
            </item>
            <item android:bottom="@dimen/_3sdp" android:left="0dp">

                <!-- light and dark color -->
                <shape>
                    <gradient android:angle="90" android:endColor="#fefeff" android:startColor="#f0f1f2" />

                    <corners android:radius="@dimen/_7sdp" />
                    <padding android:bottom="@dimen/_10sdp"

                        android:left="@dimen/_10sdp" android:right="@dimen/_10sdp" android:top="@dimen/_10sdp" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>